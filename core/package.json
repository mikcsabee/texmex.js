{
  "name": "@texmex.js/core",
  "version": "0.1.1",
  "description": "Minimalistic Object-Oriented Web Framework (@core)",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts, test/**/*.ts'",
    "doc": "typedoc --out ./doc/ ./src",
    "build": "tsc && tsc -d -p tsconfig.def.json",
    "mocha": "cross-env NODE_ENV=test nyc mocha --bail --recursive --compilers ts:ts-node/register,tsx:ts-node/register test/",
    "test": "npm run mocha && npm run lint"
  },
  "author": "Csaba Miklos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikcsabee/texmex.js.git"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "@types/sinon": "^4.3.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.2",
    "nyc": "^11.6.0",
    "sinon": "^4.4.10",
    "sinon-chai": "^3.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.1"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "exclude": [
      "src/index.ts",
      "src/logger/*",
      "src/**/*interface.ts",
      "test/*"
    ],
    "all": true
  }
}
